@model IEnumerable<Weapons>

<h2>Weapons</h2>

<div style="display: block">
    <a href="/Weapons/InsertWeapon/">New Weapon</a>
</div>

<table class="table">
    <tr>
        <th>GunID</th>
        <th>Name</th>
        <th>Category</th>
        <th>Ranking</th>
        <th>Damage</th>
        <th>TTK</th>
        <th>BestDistance</th>
    </tr>

    @foreach (var product in @Model)
    {
        <tr>
            <td><a href=/Weapons/ViewWeapon/@product.Gun_Id>@product.Gun_Id</a></td>
            <td>@product.Name</td>
            <td>@product.Category</td>
            <td>@product.Ranking</td>
            <td>@product.Damage</td>
            <td>@product.Time_To_Kill</td>
            <td>@product.Best_Distance</td>
        </tr>
    }

</table>